{
  "name": "ffpi/nodecounter",
  "description": "Theme for Freifunk Pinneberg",
  "homepage": "https://pinneberg.freifunk.net",
  "authors": [
    {
      "name": "Kevin Quiatkowski",
      "role": "Developer"
    }
  ],
  "support": {
    "forum": "https://pinneberg.freifunk.net/forum/",
    "source": "https://github.com/freifunk-pinneberg/typo3-tx_ffpi_nodecounter"
  },
  "keywords": [
    "Freifunk",
    "Pinneberg",
    "nodes",
    "counter",
    "ffmap-backend"
  ],
  "license": "GPL-3.0",
  "type": "typo3-cms-extension",
  "replace": {
    "ffpi_nodecounter": "self.version",
    "typo3-ter/ffpi-nodecounter": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "require": {
    "typo3/cms": "6.2.* || 7.6.*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.4.*",
    "phpmd/phpmd": "2.4.*",
    "pdepend/pdepend": "2.2.*",
    "phploc/phploc": "3.0.*",
    "squizlabs/php_codesniffer": "2.6.*",
    "sebastian/phpcpd": "2.0.*"

  },
  "autoload": {
    "psr-4": {
      "FFPI\\FfpiNodecounter\\": "web/typo3conf/ext/ffpi_nodecounter/Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "mkdir -p .Build/Web/typo3conf/ext/",
      "[ -L .Build/Web/typo3conf/ext/ffpi_nodecounter ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/ffpi_nodecounter"
    ]
  }
}